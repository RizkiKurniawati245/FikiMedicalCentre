@model FikiMedicalCentre.Models.msjadwaldokter

@{
    ViewBag.Title = "CreateJadwal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tambah Jadwal Dokter</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.hari, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.hari, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hari, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.waktu_awal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.waktu_awal, new { htmlAttributes = new { @class = "form-control", placeholder = "HH:MI:SS" } })
                @Html.ValidationMessageFor(model => model.waktu_awal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.waktu_akhir, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.waktu_akhir, new { htmlAttributes = new { @class = "form-control", placeholder = "HH:MI:SS" } })
                @Html.ValidationMessageFor(model => model.waktu_akhir, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_dokter, "Dokter", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_dokter", null, "-- Pilih Dokter --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_dokter, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tambah" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Kembali", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
