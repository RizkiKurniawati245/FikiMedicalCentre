@model IEnumerable<FikiMedicalCentre.Models.msrole>

@{
    ViewBag.Title = "IndexRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kelola Data Role</h2>
<br />

<p>
    @Html.ActionLink("Tambah Role", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.deskripsi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.status == 1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.deskripsi)
                </td>
                <td>
                    @Html.ActionLink("Ubah", "Edit", new { id = item.id_role }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id_role }) |
                    @Html.ActionLink("Hapus", "Delete", new { id = item.id_role })
                </td>
            </tr>
        }
    }

</table>
